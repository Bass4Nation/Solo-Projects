<Page
    x:Class="B4N_Game_Tracker.Apex"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:B4N_Game_Tracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!--TextBlocks-->
        <TextBlock x:ConnectionId='2' Name="FrontPageTitle" TextAlignment="Center" HorizontalAlignment="Left" Margin="-12,65,0,0" Text="Apex Legends" TextWrapping="Wrap" VerticalAlignment="Top" Height="173" Width="1495"                                               FontSize="100"/>
        <TextBlock x:ConnectionId='3' HorizontalAlignment="Center" Margin="-200,467,0,0" Text="Username :" TextWrapping="Wrap" VerticalAlignment="Top"                                                 FontSize=" 40"/>
        <TextBlock x:ConnectionId='4' Name="UserNameDisplay"  HorizontalAlignment="Center" Margin="0,684,0,0" Text="Stats Will show here." TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='5' Name="TestInfdoOnline"  HorizontalAlignment="Left" Margin="19,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="118" Width="209" Text="
   Usernames to online database.
                   Bass4Nation_B4N == Origin
                   Die-Reichtangle == Origin
                   Bass4Nation_YT == Playstation 4
                   klingsworld == Xbox
                   " RenderTransformOrigin="0.488,1.271" 
                   />
        <TextBlock x:ConnectionId='6' Name="TestInfoLocal"  HorizontalAlignment="Left" Margin="21,305,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="118" Width="209" Text="    Usernames to Local database.                    Bass4Nation_B4N == Origin                    FuzzyCookie == Origin                    MoneyCannon == Playstation 4                    Slopeiz == Xbox                    " 
                   />
        <TextBlock x:ConnectionId='7' Name="KillsDisplay"  HorizontalAlignment="Center" Margin="0,712,0,0" Text="Kills" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Margin="-247,712,0,0" Text="Kills : " TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='8' Name="DeathDisplay"  HorizontalAlignment="Center" Margin="0,736,0,0" Text="Death" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Margin="-260,736,0,-4" Text="Death : " TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="1.75,0.474"/>
        <TextBlock x:ConnectionId='9' Name="LastPlayedCharacter"  HorizontalAlignment="Center" Margin="0,756,0,0" Text="Character" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Margin="-343,756,0,0" Text="Character Last used :" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <!--TextBoxes-->
        <TextBox x:ConnectionId='10' Name="Username" HorizontalAlignment="Center" Margin="250,480,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="235"                             RenderTransformOrigin="0.511,-0.778"/>
        <!--Buttons-->
        <Button x:ConnectionId='11' Content="Search" Margin="0,630,0,0" VerticalAlignment="Top"                             HorizontalAlignment="Center"/>
        <Button x:ConnectionId='12' Content="Back" Margin="-2,0,0,0" VerticalAlignment="Top" Height="65" Width="172"                    />

        <!-- Checkboxes-->

        <ComboBox x:ConnectionId='13'  x:Name="PlayerPlatform" Header="Platform" PlaceholderText="Choose a platform" Width="200" Margin="250,545,0,0"                                                    RenderTransformOrigin="3.175,3.909" HorizontalAlignment="Center">
            <x:String>Origin</x:String>
            <x:String>Playstation 4</x:String>
            <x:String>Xbox</x:String>
        </ComboBox>
        <ComboBox x:ConnectionId='14'  x:Name="DatabaseChoosen" Header="Database" PlaceholderText="Choose a Database" Width="200" Margin="-200,545,0,0"                                              RenderTransformOrigin="3.175,3.909" HorizontalAlignment="Center">
            <x:String>Local</x:String>
            <x:String>Online</x:String>
        </ComboBox>

    </Grid>
</Page>

