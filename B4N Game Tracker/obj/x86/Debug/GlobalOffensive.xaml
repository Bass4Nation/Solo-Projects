<Page
    x:Class="B4N_Game_Tracker.GlobalOffensive"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:B4N_Game_Tracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!--TextBlocks-->
        <TextBlock x:ConnectionId='2' Name="FrontPageTitle" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,201,0,0" Text="Counter Strike : Global Offensive" TextWrapping="Wrap" VerticalAlignment="Top" Height="138" Width="393"                                               FontSize="48"/>
        <TextBlock x:ConnectionId='3' HorizontalAlignment="Center" Margin="-200,552.1,0,0" Text="Username :" TextWrapping="Wrap" VerticalAlignment="Top"                                                 FontSize=" 40"/>
        <TextBlock x:ConnectionId='4' Name="UserNameDisplay"  HorizontalAlignment="Center" Margin="0,684,0,0" Text="Stats Will show here." TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='5' x:Name="TestInfoLocal"  HorizontalAlignment="Left" Margin="10,322,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="118" Width="209" 
                   ><Run Text="    Usernames to Local database.                    Bass4Nation_B4N"/><LineBreak/><Run Text="FuzzyCookie"/><LineBreak/><Run Text="MoneyCannon"/><LineBreak/><Run Text="Slopeiz"/><LineBreak/><Run Text="FakeUsername            "/></TextBlock>
        <TextBlock x:ConnectionId='6' Name="KillsDisplay"  HorizontalAlignment="Center" Margin="0,712,0,0" Text="Kills" TextWrapping="Wrap" VerticalAlignment="Top"                                                 />
        <TextBlock HorizontalAlignment="Center" Margin="-152,712,0,0" Text="Kills : " TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='7' Name="DeathDisplay"  HorizontalAlignment="Center" Margin="0,736,0,0" Text="Death" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Margin="-166,736,0,-4" Text="Death : " TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="1.75,0.474"/>
        <TextBlock x:ConnectionId='8' Name="matchesPlayedDisplay"  HorizontalAlignment="Center" Margin="0,756,0,0" Text="MatchesPlayed" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Margin="-259.5,756,0,0" Text="Matches Played Total :" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <!--TextBoxes-->
        <TextBox x:ConnectionId='9' Name="Username" HorizontalAlignment="Center" Margin="250,566,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="235"                             RenderTransformOrigin="0.511,-0.778"/>
        <!--Buttons-->
        <Button x:ConnectionId='10' Content="Search" Margin="0,630,0,0" VerticalAlignment="Top"                             HorizontalAlignment="Center"/>
        <Button x:ConnectionId='11' Content="Back" Margin="-2,0,0,0" VerticalAlignment="Top" Height="65" Width="172"                    />

        <!-- Checkboxes-->

    </Grid>

</Page>

